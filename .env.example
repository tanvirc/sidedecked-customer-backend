# Customer Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development
PORT=7000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sidedecked_db
DB_NAME=sidedecked_db

# Redis
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-jwt-secret-here
COOKIE_SECRET=your-cookie-secret-here

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# TCG APIs
SCRYFALL_API_URL=https://api.scryfall.com
SCRYFALL_RATE_LIMIT=100
POKEMON_TCG_API_URL=https://api.pokemontcg.io/v2
POKEMON_TCG_API_KEY=your-pokemon-tcg-api-key
YUGIOH_API_URL=https://db.ygoprodeck.com/api/v7
ONEPIECE_API_URL=https://onepiece-cardgame.dev/api

# MinIO / S3 Storage
MINIO_ENDPOINT=bucket-production-672e.up.railway.app
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=sidedecked-card-images
MINIO_REGION=us-east-1

# CDN & Content Delivery (Cloudflare) - Disabled by default
# CDN_BASE_URL=https://cdn.yourdomain.com
# CDN_ENABLED=true
CDN_CACHE_TTL=31536000
CDN_BROWSER_CACHE_TTL=86400
CDN_EDGE_CACHE_TTL=2592000
CDN_FAILOVER_ENABLED=true

# ETL Configuration
ETL_BATCH_SIZE=100
ETL_MAX_RETRIES=5
ETL_RATE_LIMIT_DELAY=1000
ETL_CONCURRENT_JOBS=2

# Search (Algolia)
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key
ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_INDEX_CARDS=cards_catalog
ALGOLIA_INDEX_MARKETPLACE=marketplace_products

# Commerce Backend Integration
COMMERCE_BACKEND_URL=http://localhost:9000
COMMERCE_PUBLISHABLE_KEY=pk_your_publishable_key_here
COMMERCE_SERVICE_EMAIL=service@yourdomain.com
COMMERCE_SERVICE_PASSWORD=service-password

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Production CDN Example Configuration
# CDN_BASE_URL=https://cdn.sidedecked.com
# CDN_ENABLED=true
# CORS_ORIGINS=https://sidedecked.com,https://www.sidedecked.com
# COMMERCE_BACKEND_URL=https://api.sidedecked.com