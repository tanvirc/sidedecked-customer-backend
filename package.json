{
  "name": "sidedecked-customer-backend",
  "version": "1.0.0",
  "description": "SideDecked Customer Backend API Server - TCG Catalog, Deck Builder, Community, Pricing Intelligence",
  "main": "dist/index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm migration:run -d dist/config/database.js",
    "migration:revert": "typeorm migration:revert -d dist/config/database.js",
    "migration:show": "typeorm migration:show -d dist/config/database.js",
    "migration:deploy": "npm run build && npm run migration:run",
    "seed": "ts-node src/scripts/seed.ts",
    "etl": "ts-node src/scripts/master-etl.ts"
  },
  "dependencies": {
    "algoliasearch": "^4.20.0",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "blurhash": "^2.0.5",
    "bull": "^4.11.3",
    "commander": "^14.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "minio": "^7.1.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "opossum": "^8.1.0",
    "p-queue": "^7.4.1",
    "pg": "^8.11.3",
    "pokemon-tcg-sdk-typescript": "^1.3.4",
    "redis": "^4.6.8",
    "sharp": "^0.32.5",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.11.0",
    "@types/opossum": "^8.1.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
