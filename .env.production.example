# SideDecked Customer Backend Production Environment Configuration

# Database Configuration (sidedecked-db)
DATABASE_URL=postgresql://postgres:PASSWORD@HOST:PORT/DATABASE

# Redis Configuration
REDIS_URL=redis://default:PASSWORD@HOST:PORT

# JWT Configuration
JWT_SECRET=generate-secure-secret-here
COOKIE_SECRET=generate-secure-cookie-secret-here

# API Configuration
API_PORT=7000
API_HOST=0.0.0.0
CORS_ORIGINS=https://your-storefront.com,https://your-vendorpanel.com

# Commerce Backend Integration (Medusa)
COMMERCE_BACKEND_URL=https://your-backend-production.up.railway.app
# Publishable API Key for store endpoints (required)
COMMERCE_PUBLISHABLE_KEY=pk_your_publishable_key_here
# Service Account Credentials (for future admin operations)
COMMERCE_SERVICE_EMAIL=service@yourdomain.com
COMMERCE_SERVICE_PASSWORD=use-strong-password-here

# TCG Catalog System Configuration
SCRYFALL_API_URL=https://api.scryfall.com
SCRYFALL_RATE_LIMIT=100
POKEMON_TCG_API_URL=https://api.pokemontcg.io/v2
POKEMON_TCG_API_KEY=your-pokemon-api-key
YUGIOH_API_URL=https://db.ygoprodeck.com/api/v7
ONEPIECE_API_URL=https://onepiece-cardgame.dev/api

# MinIO Configuration for Images
MINIO_ENDPOINT=https://your-minio-endpoint.com
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=sidedecked-card-images
MINIO_REGION=us-east-1

# CDN Configuration
CDN_BASE_URL=https://cdn.yourdomain.com
CDN_CACHE_TTL=31536000

# ETL Configuration
ETL_BATCH_SIZE=100
ETL_MAX_RETRIES=5
ETL_RATE_LIMIT_DELAY=1000
ETL_CONCURRENT_JOBS=2

# External Services
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key
ALGOLIA_SEARCH_KEY=your-algolia-search-key

# Monitoring & Alerting (Optional)
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-key
SLACK_WEBHOOK_URL=your-slack-webhook